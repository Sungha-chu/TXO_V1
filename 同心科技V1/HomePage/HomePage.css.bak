body{
	background-color: rgba(255, 255, 255, 0.5);
	background-size: 100%;
}

#TitleBar {
	width: 99%;
	position: absolute;
	background-color: rgba(0, 200, 255, 1.0);
	max-width: 100%;
	display: flex;
}

.icon,.page {
	border:0px;
	color:white;
	font-size:30px;
	margin:auto;
	margin-left:0%;
}

#login_frame {
	width:12%;
	position: absolute;
	margin-top:5%;
	background-color: rgba(0, 200, 255, 1.0);
	border-radius: 10px;
	text-align: center;
}

.label_input {
	font-size: 20px;
	width: 80px;
	height: 28px;
	line-height: 28px;
	text-align: center;
	color: white;
	border-top-left-radius: 5px;
	border-bottom-left-radius: 5px;
}

.text_field {
	height: 28px;
	border-top-right-radius: 5px;
	border-bottom-right-radius: 5px;
	border: 0;
}

#btn_login {
	cursor:pointer;
	font-size: 20px;
	height: 28px;
	line-height: 28px;
	text-align: center;
	color: white;
	background-color: #4169E1;
	border-radius: 6px;
	border: 0;
}

#btn_login:hover{
	background: rgba(0, 0, 100, 0.7);
}

#register_pwd, #forget_pwd {
	font-size: 20px;
	color: white;
	text-decoration: none;
}

#register_pwd:hover, #forget_pwd:hover {
	color: blue;
	text-decoration: underline;
}

#login_control {
	padding: 0 28px;
}

.itext {
	filter: glow(color:blue, strength=2); font-size:50px; color:white; font-weight:900; text-shadow: 1px 1px 5px blue;
	transition: all .25s ease-in-out;
}